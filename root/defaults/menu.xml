<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
    <menu id="root-menu" label="MENU">
        <item label="kolmafia">
            <action name="Execute">
                <command>java -jar /etc/kolmafia/kolmafia.jar</command>
            </action>
        </item>
        <item label="relay browser">
            <action name="Execute">
                <command>/usr/bin/chromium http://localhost:60080/game.php</command>
            </action>
        </item>
        <item label="update kolmafia">
            <action name="Execute">
                <command>/usr/bin/xterm -e /custom-cont-init.d/99-install-kolmafia</command>
            </action>
        </item>
        <item label="browser">
            <action name="Execute">
                <command>/usr/bin/chromium</command>
            </action>
        </item>
        <item label="terminal">
            <action name="Execute">
                <command>/usr/bin/xterm</command>
            </action>
        </item>
        <item label="shutdown">
            <action name="Execute">
                <command>/usr/bin/sudo poweroff</command>
            </action>
        </item>
    </menu>
</openbox_menu>